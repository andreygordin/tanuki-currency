{
  "name": "andreygordin/tanuki-currency",
  "type": "project",
  "authors": [
    {
      "name": "Andrey Gordin",
      "email": "andrey@gordin.su"
    }
  ],
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "require": {
    "php": "^7.2"
  },
  "require-dev": {
    "overtrue/phplint": "^2.0",
    "phpunit/phpunit": "^8.5",
    "squizlabs/php_codesniffer": "^3.5",
    "vimeo/psalm": "^3.12"
  },
  "autoload": {
    "psr-4": {
      "TanukiCurrency\\": "src/"
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "lint": "phplint",
    "psalm": "psalm",
    "test": "phpunit --colors=always"
  }
}
